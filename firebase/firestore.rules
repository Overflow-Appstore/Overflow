rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isStaff() {
      return isSignedIn() && request.auth.token.role == 'staff';
    }

    function isOwner(uidField) {
      return isSignedIn() && request.auth.uid == resource.data[uidField];
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner('uid') || isStaff();
    }

    match /orgs/{orgId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /projects/{projectId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner('ownerId') || isStaff();
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner('ownerId') || isStaff();
    }

    match /follows/{followId} {
      allow read, create: if isSignedIn() && request.resource.data.followerId == request.auth.uid;
      allow delete: if isOwner('followerId');
    }

    match /threads/{threadId} {
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.members;
    }

    match /donations/{donationId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner('userId') || isStaff();
      allow update, delete: if isStaff();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read: if isStaff();
      allow update: if isStaff();
    }

    match /highlights/{highlightId} {
      allow read: if true;
      allow write: if isStaff();
    }
  }
}
